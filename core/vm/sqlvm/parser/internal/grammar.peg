BoolLiteral
	= b:( TrueToken / FalseToken )
{
	node := &ast.BoolValueNode{}
	node.SetPosition(uint32(c.pos.offset))
	node.SetLength(uint32(len(c.text)))
	if bytes.EqualFold(b.([]byte), []byte("TRUE")) {
		node.V = ast.BoolValueTrue
	} else {
		node.V = ast.BoolValueFalse
	}
	return node, nil
}

