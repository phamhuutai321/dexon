	= "\t" // \x09 (HT)
	/ "\n" // \x0a (LF)
	/ "\v" // \x0b (VT)
	/ "\f" // \x0c (FF)
	/ "\r" // \x0d (CR)
	/ " "  // \x20 (SPACE)

